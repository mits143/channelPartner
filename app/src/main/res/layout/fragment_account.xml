<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGrey"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:context=".fragment.FragmentSetting">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_3sdp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.channelpartner.utils.TextViewDrawableSize
                        android:id="@+id/txtMyProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_profile"
                        android:drawableRight="@drawable/ic_arror_right"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/colorLightBlack"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/my_profile"
                        android:textSize="@dimen/_14ssp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorLightBlack"
                        android:layout_marginLeft="@dimen/_40sdp"/>

                    <com.channelpartner.utils.TextViewDrawableSize
                        android:id="@+id/txtMyIncome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_income"
                        android:drawableRight="@drawable/ic_arror_right"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/colorLightBlack"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/my_income"
                        android:textSize="@dimen/_14ssp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorLightBlack"
                        android:layout_marginLeft="@dimen/_40sdp"/>

                    <com.channelpartner.utils.TextViewDrawableSize
                        android:id="@+id/txtMyStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_chart"
                        android:drawableRight="@drawable/ic_arror_right"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/colorLightBlack"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/my_status"
                        android:textSize="@dimen/_14ssp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorLightBlack"
                        android:layout_marginLeft="@dimen/_40sdp"/>

                    <com.channelpartner.utils.TextViewDrawableSize
                        android:id="@+id/txtWallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_wallet"
                        android:drawableRight="@drawable/ic_arror_right"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/colorLightBlack"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/wallet"
                        android:textSize="@dimen/_14ssp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorLightBlack"
                        android:layout_marginLeft="@dimen/_40sdp"/>

                    <com.channelpartner.utils.TextViewDrawableSize
                        android:id="@+id/txtReward"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_wallet"
                        android:drawableRight="@drawable/ic_arror_right"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/colorLightBlack"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/rewards"
                        android:textSize="@dimen/_14ssp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorLightBlack"
                        android:layout_marginLeft="@dimen/_40sdp"/>

                    <com.channelpartner.utils.TextViewDrawableSize
                        android:id="@+id/txtQRCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_qr_code"
                        android:drawableRight="@drawable/ic_arror_right"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/colorLightBlack"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/qrcode"
                        android:textSize="@dimen/_14ssp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorLightBlack"
                        android:layout_marginLeft="@dimen/_40sdp"/>

                    <com.channelpartner.utils.TextViewDrawableSize
                        android:id="@+id/txtChangePwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_lock"
                        android:drawableRight="@drawable/ic_arror_right"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/colorLightBlack"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/change_pwd"
                        android:textSize="@dimen/_14ssp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_3sdp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.channelpartner.utils.TextViewDrawableSize
                        android:id="@+id/txtChat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_chat"
                        android:drawableRight="@drawable/ic_arror_right"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/colorLightBlack"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/chat"
                        android:textSize="@dimen/_14ssp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorLightBlack"
                        android:layout_marginLeft="@dimen/_40sdp"/>

                    <com.channelpartner.utils.TextViewDrawableSize
                        android:id="@+id/txtAboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_lock"
                        android:drawableRight="@drawable/ic_arror_right"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/colorLightBlack"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/about_us"
                        android:textSize="@dimen/_14ssp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorLightBlack"
                        android:layout_marginLeft="@dimen/_40sdp"/>

                    <com.channelpartner.utils.TextViewDrawableSize
                        android:id="@+id/txtContactUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_lock"
                        android:drawableRight="@drawable/ic_arror_right"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/colorLightBlack"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/contact_us"
                        android:textSize="@dimen/_14ssp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorLightBlack"
                        android:layout_marginLeft="@dimen/_40sdp"/>

                    <com.channelpartner.utils.TextViewDrawableSize
                        android:id="@+id/txtFAQ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_lock"
                        android:drawableRight="@drawable/ic_arror_right"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/colorLightBlack"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/faq"
                        android:textSize="@dimen/_14ssp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorLightBlack"
                        android:layout_marginLeft="@dimen/_40sdp"/>

                    <com.channelpartner.utils.TextViewDrawableSize
                        android:id="@+id/txtLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_logout"
                        android:drawableRight="@drawable/ic_arror_right"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/colorLightBlack"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/logout"
                        android:textSize="@dimen/_14ssp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>