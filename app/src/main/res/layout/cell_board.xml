<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtBoard"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Board"
        android:textSize="@dimen/_12ssp" />

    <com.channelpartner.utils.EditTextDrawableSize
        android:id="@+id/autoTextStandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_account"
        android:drawableRight="@drawable/ic_arror_down"
        android:drawablePadding="@dimen/_10sdp"
        android:drawableTint="@color/colorLightBlack"
        android:focusable="false"
        android:hint="@string/standard_details"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:padding="@dimen/_10sdp"
        android:singleLine="true"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12ssp" />

</LinearLayout>